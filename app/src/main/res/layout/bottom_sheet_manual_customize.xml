<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_bg"

    >

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:background="@drawable/sheet_line"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حدد عدد الركعات"
        android:textColor="@color/secondaryBlackShadesLight"
        android:layout_marginBottom="10dp"
        style="@style/TitleNormal"
        />
    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       app:np_width="@android:dimen/thumbnail_width"
        app:np_orientation="horizontal"
        app:np_height="60dp"
        app:np_min="0"
        app:np_max="1000"
        app:np_selectedTextColor="@color/primaryBrandLight"
        app:np_selectedTextSize="36sp"
        app:np_textColor="@color/secondaryBlackShadesLight"
        app:np_textSize="30sp"
        app:np_value="6"
        app:np_itemSpacing="0dp"
        app:np_dividerThickness="0dp"
        app:np_wheelItemCount="6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="12dp"

        >
        <Button
            android:id="@+id/rakaat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardLight"
            app:cornerRadius="100dp"
            android:text="ركعتان"
            android:textColor="@color/secondaryBlackShadesLight"
            style="@style/BodyLargeRegular"
            android:layout_marginEnd="12dp"
            />

        <Button
            android:id="@+id/rakaat_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardLight"
            app:cornerRadius="100dp"
            android:text="50 ركعة"
            android:textColor="@color/secondaryBlackShadesLight"
            style="@style/BodyLargeRegular"
            android:layout_marginEnd="12dp"
            />

        <Button
            android:id="@+id/rakaat_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardLight"
            app:cornerRadius="100dp"
            android:text="100 ركعة"
            android:textColor="@color/secondaryBlackShadesLight"
            style="@style/BodyLargeRegular"
            android:layout_marginEnd="12dp"
            />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_prayer"
        style="@style/BodyNormalMedium"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primaryBrandLight"
        android:clickable="true"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="بدء الصلاة"
        android:textColor="@color/cardLight"
        app:cornerRadius="12dp" />
</LinearLayout>