<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
android:background="@drawable/nawafil_bg"

    >




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/nawafil_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/sun1"
        android:layout_margin="10dp"
        app:tint="@color/tertiaryBlackShadesLight"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:layout_gravity="center_vertical"
            >

            <TextView

                android:id="@+id/nawafil_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نافلة الظهر"
                style="@style/BodyLargeRegular"
                android:textColor="@color/primaryBlackShadesLight"
                />
        </LinearLayout>



    </LinearLayout>





</androidx.appcompat.widget.LinearLayoutCompat>